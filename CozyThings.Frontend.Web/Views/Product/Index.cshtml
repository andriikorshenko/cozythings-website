@model IEnumerable<ProductViewModel>
@{
    ViewData["Title"] = "Products";
}

<br />
<br />
<div class="container p-4 border w-60">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">
                @ViewBag.Title
            </h1>
        </div>
        <div class="col text-end pt-2">
            <a asp-action="Create" class="btn btn-outline-primary"><i class="bi bi-plus-circle"></i> Add New Product</a>
        </div>
    </div>

    <br />

    @if (Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @{
                    int index = 1;
                }
                @foreach (var item in Model)
                {

                    <tr>
                        <td>@(index++)</td>
                        <td>@item.Name</td>
                        <td>@item.CategoryName</td>
                        <td>@(item.Price.ToString("c"))</td>
                        <td>
                            <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.Id"><i class="bi bi-pencil"></i> Edit</a>
                            <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id"><i class="bi bi-trash3"></i> Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Products are not avaliable!</p>
    }
</div>